{
    "name": "signpostmarv/daft-nested-object",
    "description": "nested sets implementation for daft object",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "SignpostMarv",
            "email": "me@signpostmarv.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "SignpostMarv\\DaftObject\\": "./src/"
        }
    },
    "config": {
        "classmap-authoritative": true,
        "sort-packages": true
    },
    "scripts": {
        "tests": [
            "phpstan analyse -c ./phpstan.neon .php_cs.dist src",
            "psalm",
            "phpcpd src",
            "phpmnd src",
            "php-cs-fixer fix --verbose --allow-risky=yes --dry-run"
        ]
    },
    "require": {
        "php": "^7.1",
        "signpostmarv/daft-object": "^0.10.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.9.2",
        "phpstan/phpstan-strict-rules": "^0.9.0",
        "povils/phpmnd": "^2.0",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.0",
        "signpostmarv/php-cs-fixer-config": "^0.5.0",
        "vimeo/psalm": "^1.1"
    }
}
